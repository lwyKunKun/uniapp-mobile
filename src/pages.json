{
    "easycom": {
        "autoscan": true,
        "custom": {
            "^uni-(.*)": "@dcloudio/uni-ui/lib/uni-$1/uni-$1.vue",
            "^u-(.*)": "uview-ui/components/u-$1/u-$1.vue",
            "^fe-(.*)": "feui/lib/$1/index.js"
        }
    },
    "pages": [{
            "path": "pages/login/index",
            "style": {
                "navigationBarTitleText": "登录",
                "app-plus": {
                    "bounce": "none"
                }
            }
        },
        {
            "path": "pages/home/index",
            "style": {
                "navigationBarTitleText": "通用网络办公系统",
                "navigationBarBackgroundColor": "#1CBBB4",
                "navigationBarTextStyle": "white",
                "app-plus": {
                    "titleNView": {
                        "autoBackButton": false
                    },
                    "bounce": "none",
                    "scrollIndicator": "none"
                },
                "onReachBottomDistance": 100 //距离底部多远时触发 单位px
            }
        },
        {
            "path": "pages/backlog/index",
            "style": {
                "navigationBarTitleText": "待办事项",
                "navigationBarBackgroundColor": "#1CBBB4",
                "navigationBarTextStyle": "white"
            }
        },
        {
            "path": "pages/use/index",
            "style": {
                "navigationBarTitleText": "应用中心",
                "navigationBarBackgroundColor": "#1CBBB4",
                "navigationBarTextStyle": "white"
            }
        },
        {
            "path": "pages/mine/index",
            "style": {
                "style": {
                    "app-plus": {
                        "titleNView": false
                    }
                }
            }
        },
        {
            "path": "pages/backlog/modules/details",
            "style": {
                "navigationBarTitleText": "待办详情",
                "navigationBarBackgroundColor": "#1CBBB4",
                "navigationBarTextStyle": "white",
                "app-plus": {
                    "bounce": "none",
                    "scrollIndicator": "none" //当前页面不显示滚动条
                }
            }
        }
    ],
    "tabBar": {
        "list": [{
                "pagePath": "pages/home/index"
            },
            {
                "pagePath": "pages/backlog/index"
            },
            {
                "pagePath": "pages/use/index"
            },
            {
                "pagePath": "pages/mine/index"
            }
        ]
    },
    "globalStyle": {
        "navigationBarTextStyle": "black",
        "navigationBarTitleText": "uni-app",
        "navigationBarBackgroundColor": "#F8F8F8",
        "backgroundColor": "#F8F8F8",
        "rpxCalcMaxDeviceWidth": 960, // rpx 计算所支持的最大设备宽度，单位 px，默认值为 960
        "rpxCalcBaseDeviceWidth": 375, // rpx 计算使用的基准设备宽度，设备实际宽度超出 rpx 计算所支持的最大设备宽度时将按基准宽度计算，单位 px，默认值为 375
        "rpxCalcIncludeWidth": 750 // rpx 计算特殊处理的值，始终按实际的设备宽度计算，单位 rpx，默认值为 750
    }
}